source intakePipeDict

# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *

for (( verNo = 1; verNo <= $versions; verNo++ )); do

    # Copying 0/ folder & verRun script from the ver1/ to the other versions 
    if [[ $verNo>1 ]]; then
        cp -r ver1/verRun ver$verNo/
        cp -r ver1/0 ver$verNo/
    fi

    # Run version (variant) of the inlet channel geometry
    ver$verNo/./verRun

done

#------------------------------------------------------------------------------
